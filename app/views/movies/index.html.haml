-#  This file is app/views/movies/index.html.haml
%h1 All Movies

= form_tag movies_path, :method => :get do
  Include: 
  - @all_ratings.each do |rating| # For each distinct rating
    = rating
    = check_box_tag "ratings[#{rating}]", 1, session[:ratings].include?(rating)  # add a checkbox
  = submit_tag 'Refresh'

%table#movies
  %thead
    %tr
      %th{:class => ("hilite" if params[:sort] == "title")}= link_to "Movie Title", :controller => "movies", :sort => :title
      %th Rating
      %th{:class => ("hilite" if params[:sort] == "release_date")}= link_to "Release Date", :controller => "movies", :sort => :release_date
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
